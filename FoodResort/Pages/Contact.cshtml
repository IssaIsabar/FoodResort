@page
@model ContactModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Contact";
}

<div class="text-center">
    <h1 class="display-4">Contact us.</h1>
    <p>Please use the form below.</p>
    <p style="color: red !important;">@ViewData["ResultMessage"]</p>
</div>

@if (Model.MessageSent)
{
    <div>
        <h1>Message was sent, we will get back to you ASAP.</h1>
    </div>
}
else
{
    <form method="post">
        <input asp-for="Contact.Email" />
        <input asp-for="Contact.Subject" />
        <input asp-for="Contact.Message" />

        <input type="submit" />
    </form>
}



